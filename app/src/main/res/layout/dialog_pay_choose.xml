<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dp_20"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        >

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/close"
            />


        <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择支付方式"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/transparent_half"
        android:layout_centerHorizontal="true"
        />

        <TextView
            android:layout_below="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:id="@+id/money"
            android:text="￥19"
            android:textSize="@dimen/sp_18"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/zfb_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            >

            <ImageView
                android:id="@+id/w_image"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:src="@mipmap/ssdk_oks_classic_alipay"
                />
            <TextView
                android:layout_toRightOf="@+id/w_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/hui"
                android:layout_marginLeft="@dimen/sp_10"
                android:text="支付宝支付"
                />

            <ImageView
                android:id="@+id/zfb_image"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:src="@mipmap/xuanzhong"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wx_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            >

            <ImageView
                android:id="@+id/z_image"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:src="@mipmap/ssdk_oks_classic_wechat"
                />

            <TextView
                android:layout_toRightOf="@+id/z_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/hui"
                android:layout_marginLeft="@dimen/sp_10"
                android:text="微信支付"
                />

            <ImageView
                android:id="@+id/wx_image"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:src="@mipmap/xuanzhong"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即支付"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/buttonstyle"
        />
</LinearLayout>
